<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.company.myplanner">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="Register User"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".PlannerActivity"
            android:label="Plans" android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".AddPlannerActivity"
            android:label="Add Plan"
            android:parentActivityName=".PlannerActivity" />

        <receiver android:name=".service.DeviceBootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".AddBudgetActivity"
            android:label="Add budget"
            android:parentActivityName=".BudgetActivity" />
        <activity
            android:name=".BudgetActivity"
            android:label="Budgets"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".PlannerBudgetActivity"
            android:label="Management"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".PlannerInfoActivity"
            android:label="Plan Information"
            android:parentActivityName=".PlannerActivity" />
        <activity
            android:name=".PeriodActivity"
            android:label="Period Tracking"
            android:parentActivityName=".MainActivity"></activity>
    </application>

</manifest>