<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="70dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="100dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"

            android:text="drink wateer" />
        <TextView
            android:id="@+id/dateTimeTextView"
            android:layout_width="120dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/nameTextView"
            android:text="5/05/2017 2:2" />
        <TextView
            android:id="@+id/updateTextView"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/dateTimeTextView"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableEnd="@mipmap/ic_mode_edit_black_48dp"
            android:drawableRight="@mipmap/ic_mode_edit_black_48dp" />

        <TextView
            android:id="@+id/deleteTextView"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
          android:layout_toRightOf="@id/updateTextView"
            android:layout_height="wrap_content"
            android:drawableEnd="@mipmap/ic_delete_forever_black_48dp"
            android:drawableRight="@mipmap/ic_delete_forever_black_48dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
</LinearLayout>
