<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/commitmentTextView"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/valueTextView"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/commitmentTextView"
                />
            <TextView
                android:id="@+id/deleteTextView"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/valueTextView"
                android:layout_height="wrap_content"
                android:drawableEnd="@mipmap/ic_delete_forever_black_48dp"
                android:drawableRight="@mipmap/ic_delete_forever_black_48dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
